<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/ScrollAbout" android:layout_height="fill_parent" android:layout_width="fill_parent">
	<LinearLayout
		android:background="@drawable/backgroundgradient"
		android:orientation="vertical"
		android:scrollbars="horizontal"
		android:scrollbarStyle="insideInset"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView
			android:layout_height="wrap_content"
			android:id="@+id/GameLogo"
			android:src="@drawable/gamelogo"
			android:layout_width="fill_parent"
			android:layout_gravity="center_vertical|center_horizontal"
			android:scaleType="center"></ImageView>
		<TextView
			android:layout_height="wrap_content"
			android:textColor="#FFFFFFFF"
			android:text="About"
			android:textStyle="bold"
			android:textSize="19dp"
			android:layout_width="fill_parent"
			android:id="@+id/About"></TextView>
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:id="@+id/AboutText"
			android:textColor="#FFFFFFFF"
			android:text="@string/about_text"></TextView>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/Scores"
			android:text="@string/point_values"
			android:textColor="#FFFFFF"
			android:typeface="monospace"></TextView>
		<TextView
			android:layout_height="wrap_content"
			android:textColor="#FFFFFFFF"
			android:textStyle="bold"
			android:textSize="19dp"
			android:layout_width="fill_parent"
			android:id="@+id/Dedication"
			android:text="Dedication"></TextView>
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:id="@+id/AboutText"
			android:textColor="#FFFFFFFF"
			android:text="@string/dedication_text"></TextView>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/copyright_text"
			android:id="@+id/CopyRight"></TextView>
	</LinearLayout>
</ScrollView>
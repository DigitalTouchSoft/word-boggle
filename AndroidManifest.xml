<?xml version="1.0" encoding="utf-8"?>
<manifest
	android:versionCode="7"
	android:versionName="1.4"
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="dtsoft.main.wordboggle">
	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:theme="@android:style/Theme.NoTitleBar">
		<activity
			android:configChanges="orientation|keyboardHidden|keyboard"
			android:screenOrientation="portrait"
			android:name=".SplashScreen">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:configChanges="orientation|keyboardHidden|keyboard"
			android:screenOrientation="portrait"
			android:name=".WordBoggle">
			<intent-filter>
				<action
					android:name="dtsoft.main.wordboggle.WordBoggle" />
				<category
					android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity
			android:configChanges="orientation|keyboardHidden|keyboard"
			android:screenOrientation="portrait"
			android:name=".WelcomeScreen">
			<intent-filter>
				<action
					android:name="dtsoft.main.wordboggle.WelcomeScreen" />
				<category
					android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity
			android:screenOrientation="portrait"
			android:name=".WordsFoundList" />
		<activity
			android:screenOrientation="portrait"
			android:name=".AboutInfo" />
		<activity
			android:name=".GameSettings"
			android:screenOrientation="portrait"></activity>
	</application>
	<uses-sdk
		android:minSdkVersion="7"></uses-sdk>
	<supports-screens
		android:largeScreens="true"
		android:normalScreens="true"
		android:smallScreens="false"
		android:anyDensity="false"></supports-screens>
</manifest>